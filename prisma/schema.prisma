generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model category {
  id       Int           @id @unique @default(autoincrement())
  name     type_products
  products products[]
}

model products {
  id          Int      @id @unique @default(autoincrement())
  name        String   @db.VarChar(100)
  description String   @db.VarChar(100)
  amount      Decimal  @db.Decimal(12, 2)
  idCategoria category @relation(fields: [id], references: [id])
}

enum type_products {
  Computing
  Automotive
  Furniture
}
